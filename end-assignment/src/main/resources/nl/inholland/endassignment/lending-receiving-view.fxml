<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #D3D3D3;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <HBox prefHeight="76.0" prefWidth="1280.0">
      <children>
         <Label fx:id="welcomeLabel" text="Label">
            <HBox.margin>
               <Insets left="34.0" top="12.0" />
            </HBox.margin>
            <font>
               <Font size="30.0" />
            </font>
         </Label>
      </children>
   </HBox>

    <HBox id="LendingReceivingBox" layoutY="72.0" prefHeight="586.0" prefWidth="1280.0" style="-fx-background-color: light-gray;" GridPane.columnIndex="4" GridPane.rowIndex="8">
        <children>
            <Region prefHeight="258.0" prefWidth="33.0" />
            <VBox prefHeight="45.0" prefWidth="400.0" style="-fx-background-color: white;">
                <children>
                    <TextField fx:id="lendItemCodeField" prefHeight="26.0" prefWidth="143.0" promptText="Item code">
                        <VBox.margin>
                            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                        </VBox.margin>
                    </TextField>
                    <TextField fx:id="memberIdTextField" promptText="Member identifier">
                        <VBox.margin>
                            <Insets bottom="10.0" left="20.0" right="20.0" />
                        </VBox.margin>
                    </TextField>
                    <Button mnemonicParsing="false" onAction="#onLendItemButtonClick" text="Lend item">
                        <VBox.margin>
                            <Insets left="20.0" />
                        </VBox.margin>
                    </Button>
                    <Label fx:id="feedbackLendItemLabel" text="Feedback item" visible="false">
                        <VBox.margin>
                            <Insets left="20.0" top="10.0" />
                        </VBox.margin>
                    </Label>
                </children>
            </VBox>
            <Region layoutX="10.0" layoutY="10.0" prefHeight="258.0" prefWidth="33.0" />
            <VBox prefHeight="200.0" prefWidth="400.0" style="-fx-background-color: white;">
                <children>
                    <TextField fx:id="receiveItemCodeField" prefHeight="26.0" prefWidth="143.0" promptText="Item code">
                        <VBox.margin>
                            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                        </VBox.margin>
                    </TextField>
                    <Button mnemonicParsing="false" onAction="#onReceiveItemButtonClick" text="Receive item">
                        <VBox.margin>
                            <Insets left="20.0" />
                        </VBox.margin>
                    </Button>
                    <Label fx:id="feedbackReceiveItemLabel" text="feedbackReceiveItemLabel" visible="false">
                        <VBox.margin>
                            <Insets left="20.0" top="10.0" />
                        </VBox.margin>
                    </Label>
                </children>
            </VBox>
        </children>
        <opaqueInsets>
            <Insets />
        </opaqueInsets>
        <padding>
            <Insets bottom="20.0" />
        </padding>
    </HBox>
</AnchorPane>
