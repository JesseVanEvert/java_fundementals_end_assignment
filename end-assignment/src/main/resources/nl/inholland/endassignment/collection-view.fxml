<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="800.0" style="-fx-background-color: #D3D3D3;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">

    <VBox id="ItemsBox" prefHeight="400.0" prefWidth="800.0" GridPane.columnIndex="4" GridPane.rowIndex="8">
        <opaqueInsets>
            <Insets />
        </opaqueInsets>
        <GridPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" />
        </GridPane.margin>
        <children>
            <TableView fx:id="itemsTableView" prefHeight="206.0" prefWidth="711.0">
                <columns>
                    <TableColumn text="Item code">
                        <cellValueFactory>
                            <PropertyValueFactory property="id" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Available">
                        <cellValueFactory>
                            <PropertyValueFactory property="available" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Title">
                        <cellValueFactory>
                            <PropertyValueFactory property="title" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Author">
                        <cellValueFactory>
                            <PropertyValueFactory property="authorName" />
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
         <HBox prefHeight="54.0" prefWidth="561.0">
            <children>
               <TextField fx:id="titleField" promptText="Title">
                  <HBox.margin>
                     <Insets left="10.0" top="10.0" />
                  </HBox.margin>
               </TextField>
               <TextField fx:id="firstnameAuthorField" promptText="Firstname author">
                  <HBox.margin>
                     <Insets left="10.0" top="10.0" />
                  </HBox.margin>
               </TextField>
               <TextField fx:id="prefixField" prefHeight="26.0" prefWidth="53.0" promptText="Prefix">
                  <HBox.margin>
                     <Insets left="10.0" top="10.0" />
                  </HBox.margin>
               </TextField>
               <TextField fx:id="lastnameAuthorField" promptText="Lastname author">
                  <HBox.margin>
                     <Insets left="10.0" top="10.0" />
                  </HBox.margin>
               </TextField>
               <Button onAction="#onAddItemButtonClick" fx:id="addItem" mnemonicParsing="false" style="-fx-background-color: blue;" text="Add item" textFill="WHITE">
                  <HBox.margin>
                     <Insets left="10.0" top="10.0" />
                  </HBox.margin>
               </Button>
                    <Button onAction="#onEditItemButtonClick" mnemonicParsing="false" style="-fx-background-color: gray;" text="Edit item" textFill="WHITE">
                        <HBox.margin>
                            <Insets left="10.0" top="10.0" />
                        </HBox.margin>
                    </Button>
               <Button onAction="#onClearFieldsButtonClick" layoutX="640.0" layoutY="20.0" mnemonicParsing="false" style="-fx-background-color: green;" text="Clear fields" textFill="WHITE">
                  <HBox.margin>
                     <Insets left="10.0" top="10.0" />
                  </HBox.margin>
               </Button>
            </children>
         </HBox>
         <HBox layoutX="10.0" layoutY="271.0" prefHeight="54.0" prefWidth="561.0">
            <children>
               <Button onAction="#onDeleteItemButtonClick" mnemonicParsing="false" style="-fx-background-color: red;" text="Delete item" textFill="WHITE">
                  <HBox.margin>
                     <Insets left="10.0" top="10.0" />
                  </HBox.margin>
               </Button>
            </children>
         </HBox>
        </children>
    </VBox>
</AnchorPane>
